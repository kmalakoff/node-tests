#!/usr/bin/env node

var program = require('commander');
var NodeTests = require('..');

program.option('-v, --version [version]', 'node version to test against');
program.option('-m, --module [module]', 'module to test');
program.parse(process.argv);

if (program.args.length < 1) {
  console.log('Missing command. Example usage: run-test [test]');
  return process.exit(-1);
}

var tests = new NodeTests(program);
tests.runTest(program.args[0], function (err) {
  if (err) {
    console.log(err);
    process.exit(-1);
  }
});
